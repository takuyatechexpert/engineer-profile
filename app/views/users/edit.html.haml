#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :age
          .field-input
            = f.text_field :age
        .field
          .field-label
            = f.label :occupation
          .field-input
            = f.text_field :occupation
        .field
          .field-label
            = f.label :experience
          .field-input
            = f.text_field :experience
        .field
          .field-label
            = f.label :sns
          .field-input
            = f.text_field :sns
        .field
          .field-label
            = f.label :sns, "SNS"
          .field-input
            = f.text_field :sns
        .field
          .field-label
            = f.label :programmnig_lang, "Programmnig Lang"
          .field-input
            = f.text_area :programming_lang, rows: 10, cols: 51
        .field
          .field-label
            = f.label :pr, "PR"
          .field-input
            = f.text_area :pr, rows: 10, cols: 51
        .actions
          = f.submit "Update", class: 'btn'
